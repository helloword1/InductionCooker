<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/addNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"
            android:visibility="gone" />

        <com.goockr.inductioncooker.view.SegmentController
            android:id="@+id/fragment_home_segment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tvConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/fragment_home_segment"
            android:layout_gravity="bottom"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/fragment_home_segment"
            android:background="@drawable/connect_bg"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            android:text="未连接"
            android:textColor="@color/colormain"
            android:textSize="11sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/imagetop_button_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="5dp"
        android:text="电磁炉-0001"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/fragment_home_moden_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" />
</LinearLayout>