<?xml version="1.0" encoding="utf-8"?>
<com.goockr.ui.view.SlidingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/navbar" />

        <TextView
            android:id="@+id/fragment_sms_code_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="12345678901"
            android:textColor="@color/colorGray2"
            android:textSize="16dp" />
        <!--<com.goockr.inductioncooker.view.MyEditText-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="50dp"-->
        <!--android:id="@+id/fragment_sms_code_et"-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:layout_marginRight="20dp"-->

        <!--/>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@mipmap/inputbox_1">

            <Button
                android:id="@+id/fragment_sms_code_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/transparent"
                android:paddingRight="5dp"
                android:text="@string/sms_getCode"
                android:textColor="@color/colorOrange1" />

            <com.goockr.inductioncooker.view.MyEditText
                android:id="@+id/fragment_sms_code_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/fragment_sms_code_bt" />

        </RelativeLayout>

    </LinearLayout>


</com.goockr.ui.view.SlidingRelativeLayout>