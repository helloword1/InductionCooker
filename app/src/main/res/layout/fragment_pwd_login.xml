<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/navbar"></include>

    <com.goockr.inductioncooker.view.MyEditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/fragment_pwd_phone_et"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        >
    </com.goockr.inductioncooker.view.MyEditText>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/inputbox_1"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_pwd_smscode_bt"
            android:text="获取验证码"
            android:padding="0dp"
            android:textColor="@color/colorOrange1"
            android:background="@color/transparent"
            android:layout_alignParentRight="true"
            />

        <com.goockr.inductioncooker.view.MyEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_pwd_sms_et"
            android:layout_toLeftOf="@+id/fragment_pwd_smscode_bt"
            />

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_big"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="登录"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_login_moden_bt"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_vertical|right"
        android:text="账号登录"
        android:layout_marginTop="5dp"
        android:padding="0dp"
        android:gravity="right|center_vertical"
        android:background="@color/transparent"
        android:textColor="@color/colorOrange1"
        />






</LinearLayout>