<?xml version="1.0" encoding="utf-8"?>
<com.goockr.ui.view.SlidingRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/navbar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:background="@mipmap/inputbox_1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_update_pwd_oldpwd_tv"
                android:layout_centerVertical="true"
                android:text="旧  密  码:"
                android:textColor="@color/colorblack"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                />

            <com.goockr.inductioncooker.view.MyEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_update_pwd_oldpwd_et"
                android:layout_toRightOf="@+id/fragment_update_pwd_oldpwd_tv"
                android:layout_marginRight="5dp"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/inputbox_1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_update_pwd_newpwd_tv"
                android:layout_centerVertical="true"
                android:text="新  密  码:"
                android:textColor="@color/colorblack"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                />

            <com.goockr.inductioncooker.view.MyEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_update_pwd_newpwd_et"
                android:layout_toRightOf="@+id/fragment_update_pwd_newpwd_tv"
                android:layout_marginRight="5dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/inputbox_1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_update_pwd_again_tv"
                android:layout_centerVertical="true"
                android:text="确认密码:"
                android:textColor="@color/colorblack"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                />

            <com.goockr.inductioncooker.view.MyEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_update_pwd_again_et"
                android:layout_toRightOf="@+id/fragment_update_pwd_again_tv"
                android:layout_marginRight="5dp"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_update_pwd_forget_tv"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="忘记密码？"
            android:textSize="16sp"
            android:textColor="@color/colormain"
            />

    </LinearLayout>






</com.goockr.ui.view.SlidingRelativeLayout>