<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorbg"
    android:paddingTop="15dp"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/segment_controller_leftbg_ll"
        android:layout_width="wrap_content"
        android:background="@mipmap/segment_controls_left_selected"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="L"
            android:gravity="center"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:src="@mipmap/home_icon_warning"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/segment_controller_rightbg_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@mipmap/segment_controls_right_normal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="R"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="5px"
            android:src="@mipmap/home_icon_warning"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>